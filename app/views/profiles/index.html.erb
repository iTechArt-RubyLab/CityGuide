<center>
<h1>Profiles</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Birthday</th>
      <th>Note</th>
      <th>Phone number</th>
      <th>Email address</th>
      <th>Have organizations</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @profiles.each do |profile| %>
        <td><%= profile.name %></td>
        <td><%= profile.surname %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.note %></td>
        <td><%= profile.phone_number %></td>
        <td><%= profile.email_address %></td>
        <% if profile.user.organizations != [] %>
        <td>Have</td>
        <%else %>
        <td>Don't Have</td>
        <% end %>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tbody> 
  <% end %>
</table>
</center>
<br>
<% if current_user.is_admin %>
<%= link_to 'Back', admin_view_url, method: :get%> <br />
<% end %>
<%= link_to 'New Profile', new_profile_path %>
